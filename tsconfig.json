{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "rootDir": "src",
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["ESNext"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
  }
}