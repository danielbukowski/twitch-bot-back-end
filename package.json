{
  "name": "twitch-bot-back-end",
  "version": "1.0.0",
  "description": "This is a back-end project for my personal Twitch bot ;)",
  "main": "dist/Main.js",
  "scripts": {
    "build": "rimraf ./dist && npx tsc",
    "start": "npm run build && node --env-file=.prod.env dist/Main.js",
    "dev": "npx nodemon",
    "test": "npx jest",
    "lint": "npx @biomejs/biome lint ./src",
    "format": "npx @biomejs/biome format --write ./src"
  },
  "author": "Daniel Bukowski",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/danielbukowski/twitch-bot-back-end.git"
  },
  "dependencies": {
    "@distube/ytdl-core": "^4.13.5",
    "@twurple/api": "^7.0.8",
    "@twurple/auth": "^7.0.8",
    "@twurple/chat": "^7.0.8",
    "@twurple/eventsub-ws": "^7.0.8",
    "@types/luxon": "^3.4.2",
    "axios": "^1.6.5",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "luxon": "^3.4.4",
    "socket.io": "^4.7.4",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.5",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "include": [
    "/src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
